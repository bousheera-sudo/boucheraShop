{
  "version": 2,
  "builds": [
    {
      "src": "api/lambda.php",
      "use": "vercel-php@0.7.4",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "vendor/**",
          "bootstrap/**",
          "app/**",
          "config/**",
          "database/**",
          "resources/**",
          "routes/**",
          "storage/**",
          "artisan",
          "composer.json",
          "composer.lock"
        ]
      }
    }
  ],
  "functions": {
    "api/lambda.php": {
      "runtime": "vercel-php@0.7.4",
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "routes": [
    { "src": "/css/(.*)", "dest": "/public/css/$1" },
    { "src": "/imgs/(.*)", "dest": "/public/imgs/$1" },
    { "src": "/js/(.*)", "dest": "/public/js/$1" },
    { "src": "/fonts/(.*)", "dest": "/public/fonts/$1" },
    { "src": "/favicon.ico", "dest": "/public/favicon.ico" },
    { "src": "/robots.txt", "dest": "/public/robots.txt" },
    { "src": "/storage/(.*)", "dest": "/public/storage/$1" },
    { "src": "/(.*)", "dest": "/api/lambda.php" }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "CACHE_DRIVER": "array",
    "SESSION_DRIVER": "cookie",
    "LOG_CHANNEL": "single"
  }
}
